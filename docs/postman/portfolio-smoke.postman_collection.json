{
  "info": {
    "name": "Trading API Portfolio Smoke",
    "_postman_id": "c2fb1c3a-f2f5-427f-92cb-c4e45fbf3ef1",
    "description": "Smoke requests for balances and portfolio endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Balances",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/balances?accountId={{accountId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "balances"
          ],
          "query": [
            {
              "key": "accountId",
              "value": "{{accountId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Get Portfolio",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/portfolio?accountId={{accountId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "portfolio"
          ],
          "query": [
            {
              "key": "accountId",
              "value": "{{accountId}}"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081"
    },
    {
      "key": "accountId",
      "value": "11111111-1111-1111-1111-111111111111"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}

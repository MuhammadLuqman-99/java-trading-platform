{
  "realm": "trading-platform",
  "enabled": true,
  "displayName": "Trading Platform (Dev)",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "rememberMe": true,
  "roles": {
    "realm": [
      {
        "name": "TRADER",
        "description": "Can place and manage orders for assigned accounts."
      },
      {
        "name": "VIEWER",
        "description": "Read-only access to balances, positions, and orders."
      },
      {
        "name": "ADMIN",
        "description": "Administrative control over users, limits, and manual adjustments."
      },
      {
        "name": "COMPLIANCE",
        "description": "Access to audit and compliance operations."
      }
    ]
  },
  "clients": [
    {
      "clientId": "trading-api",
      "name": "trading-api",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true,
      "secret": "trading-api-secret-dev",
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "trading-api-swagger",
      "name": "trading-api-swagger",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "bearerOnly": false,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true,
      "redirectUris": [
        "http://localhost:8081/swagger-ui/oauth2-redirect.html",
        "http://127.0.0.1:8081/swagger-ui/oauth2-redirect.html",
        "http://localhost:8080/swagger-ui/oauth2-redirect.html",
        "https://oauth.pstmn.io/v1/callback",
        "https://oauth.pstmn.io/v1/browser-callback"
      ],
      "webOrigins": [
        "http://localhost:8081",
        "http://127.0.0.1:8081",
        "http://localhost:8080",
        "https://oauth.pstmn.io"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "audience-trading-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "trading-api",
            "access.token.claim": "true",
            "id.token.claim": "false"
          }
        }
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ],

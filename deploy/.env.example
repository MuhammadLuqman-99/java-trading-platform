# Copy this file to .env (same directory as docker-compose.yml) before running:
#   docker compose --env-file deploy/.env -f deploy/docker-compose.yml up -d

# PostgreSQL
POSTGRES_USER=trading
POSTGRES_PASSWORD=trading_pass
POSTGRES_DB=trading
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Kafka (external host port; internal broker listener remains kafka:9092)
KAFKA_PORT=9092
INFRA_KAFKA_TOPICS_ENABLED=true
INFRA_KAFKA_TOPICS_PARTITIONS=3
INFRA_KAFKA_TOPICS_REPLICATION_FACTOR=1

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080

# App ports
TRADING_API_PORT=8081
WORKER_EXEC_PORT=8082

# Worker execution mode
WORKER_EXECUTION_ADAPTER=logging

# Binance connector (env credentials)
CONNECTOR_BINANCE_BASE_URL=https://api.binance.com
CONNECTOR_BINANCE_API_KEY=
CONNECTOR_BINANCE_API_SECRET=

# Binance connector (file credentials, optional; mounted from ./deploy/secrets)
# Example:
# CONNECTOR_BINANCE_API_KEY_FILE=/run/secrets/binance_api_key
# CONNECTOR_BINANCE_API_SECRET_FILE=/run/secrets/binance_api_secret
CONNECTOR_BINANCE_API_KEY_FILE=
CONNECTOR_BINANCE_API_SECRET_FILE=

# Legacy aliases retained for compatibility with app placeholders
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_API_KEY_FILE=
BINANCE_API_SECRET_FILE=

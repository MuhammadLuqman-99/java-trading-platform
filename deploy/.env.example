# Copy this file to .env (same directory as docker-compose.yml) before running:
#   docker compose --env-file deploy/.env -f deploy/docker-compose.yml up -d

# PostgreSQL
POSTGRES_USER=trading
POSTGRES_PASSWORD=trading_pass
POSTGRES_DB=trading
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Kafka (external host port; internal broker listener remains kafka:9092)
KAFKA_PORT=9092
INFRA_KAFKA_TOPICS_ENABLED=true
INFRA_KAFKA_TOPICS_PARTITIONS=3
INFRA_KAFKA_TOPICS_REPLICATION_FACTOR=1

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080
